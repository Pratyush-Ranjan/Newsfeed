<div ng-repeat="post in posts | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up"
          ng-click="incrementupvotes(post.id,post.upvotes)"></span>
        {{post.upvotes}}{{ userData.email }} 
        <span style="font-size:20px; margin-left:10px;">
          <a style="color: darkblue;" ng-show="post.link" href="{{post.link}}">
            {{post.title}}
          </a>
          <span style="color: darkblue;" ng-hide="post.link">
            {{post.title}}
          </span>
        </span>
          <a href="#/comment/{{post.id}}">comments</a>
        </span>
      </div>

      <form ng-submit="addpost()"
        style="margin-top:30px;">
        <h3>Add a news post</h3>
        <div class="form-group">
           <input class="form-control" type="text" placeholder="Title" ng-model="title">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" placeholder="Link" ng-model="link"></input>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>